{
  "name": "kitchenhub-backend",
  "version": "1.0.0",
  "description": "Backend API for KitchenHub - shopping lists, meal planning, and recipe management",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --runInBand",
    "test:watch": "jest --runInBand --watch",
    "test:ci": "jest --runInBand --ci --coverage --reporters=default --reporters=jest-junit"
  },
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "keywords": ["kitchenhub", "shopping", "meal-planning", "recipes", "api"],
  "author": "",
  "license": "ISC",
  "jest": {
    "testEnvironment": "node",
    "testMatch": ["**/*.test.js"],
    "reporters": ["default", "jest-junit"],
    "coverageReporters": ["text", "text-summary", "json-summary"]
  }
}
